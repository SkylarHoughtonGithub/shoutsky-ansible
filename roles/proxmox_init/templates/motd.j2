echo "Current Usage:"
echo "  Load Average: $(cat /proc/loadavg | cut -d' ' -f1-3)"
echo "  Memory Usage: $(free | grep Mem | awk '{printf "%.1f%%", $3/$2 * 100.0}')"
echo "  OS Disk Usage: $(df -h / | awk 'NR==2{printf "%s/%s (%s)", $3, $2, $5}')"
