#!/bin/bash
echo ""
echo "UNAUTHORIZED ACCESS IS PROHIBITED"
echo "This system is for authorized users only. All activities are monitored and"
echo "logged. Unauthorized access will be prosecuted to the full extent of the law."
echo ""
echo "==============================================================================="
echo "                            PROXMOX HOST: $(hostname)"
echo "==============================================================================="
echo "System Information:"
echo "  OS: $(cat /etc/os-release | grep PRETTY_NAME | sed 's/PRETTY_NAME=//' | tr -d '"')"
echo "  Kernel: $(uname -r) $(uname -v)"
echo "  Architecture: $(lscpu | grep Arch | awk '{print $2}')"
echo "  Uptime: $(uptime -p)"
echo ""
echo "Hardware:"
echo "  CPU: $(lscpu | grep "Model name" | sed 's/Model name://' | xargs)"
echo "  Cores: $(lscpu | grep "CPU(s):" | grep -v "NUMA" | awk '{print $2}')"
echo "  Memory Available: $(free -h | grep Mem: | awk '{print $2}')"
